{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@ui/*": ["src/frontend/ui/*"],
      "@Negocio/*": ["src/frontend/Negocio/*"], 
      "@Accesodatos/*": ["src/frontend/Accesodatos/*"]
    },
    "types": ["react", "react-dom", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}